<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="autoIncrement" value="true" dbms="mysql,mariadb,h2"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <changeSet id="20220629102347" author="smbar" labels="akilimo-migration">
        <createTable tableName="user_auth">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="bigint"/>

            <column name="api_key" type="varchar(150)">
                <constraints nullable="false"/>
            </column>

            <column name="enabled" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>

        </createTable>

        <addForeignKeyConstraint baseTableName="user_auth"
                                 baseColumnNames="user_id"
                                 constraintName="user-auth-id-fk"
                                 referencedTableName="users"
                                 onUpdate="CASCADE"
                                 onDelete="RESTRICT"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>
