<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="autoIncrement" value="true" dbms="mysql,mariadb,h2"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <changeSet id="20240930104807" author="masgeek" labels="akilimo-migration">
        <createTable tableName="api_tokens">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="ip_address" type="varchar(255)"/>
            <column name="expiry_date" type="datetime"/>

            <column name="created_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>

        </createTable>

        <modifySql dbms="mysql,mariadb">
            <append value=" engine innodb charset=utf8mb4 collate utf8mb4_unicode_ci"/>
        </modifySql>

    </changeSet>
</databaseChangeLog>
